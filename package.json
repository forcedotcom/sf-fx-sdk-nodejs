{
  "name": "salesforce-fdk",
  "version": "1.0.0",
  "description": "Salesforce Lightning Function Developer Kit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p .",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "test": "mocha -r ts-node/register 'test/unit/**/*.ts'",
    "test-all": "mocha -r ts-node/register 'test/**/*.ts'",
    "test-integration": "mocha -r ts-node/register 'test/integration/**/*.ts'",
    "version": "npm run format && git add -A src",
    "watch-ts": "tsc -w"
  },
  "pre-commit": [
    "build",
    "format",
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forcedotcom/sf-fx-sdk-nodejs.git"
  },
  "author": "cwall@salesforce.com",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/forcedotcom/sf-fx-sdk-nodejs/issues"
  },
  "homepage": "https://github.com/forcedotcom/sf-fx-sdk-nodejs#readme",
  "dependencies": {
    "@types/jsforce": "^1.9.3",
    "cloudevents-sdk": "^0.2.0",
    "dotenv": "^4.0.0",
    "jsforce": "^1.9.0",
    "jsforce-connection": "^2.1.0",
    "json-schema-to-typescript": "^6.1.3",
    "tslib": "1.9.3",
    "typed-rest-client": "^1.0.11"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/sinon": "^7.0.4",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "sinon": "^7.2.3",
    "ts-node": "7.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "3.2.2"
  }
}
