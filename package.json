{
  "name": "@heroku/salesforce-sdk",
  "version": "0.0.1-develop.2",
  "description": "Salesforce Function SDK for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "./dist"
  },
  "scripts": {
    "build": "tsc -p .",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.js\"",
    "lint": "tslint -c tslint.json 'lib/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "posttest": "tslint -c tslint.json 'lib/**/*.ts'",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "test": "nyc --extension .ts mocha --forbid-only -r ts-node/register 'test/unit/**/*.ts'",
    "test-all": "mocha -r ts-node/register 'test/**/*.ts'",
    "test-integration": "mocha -r ts-node/register 'test/integration/**/*.ts'",
    "version": "npm run format && git add -A src",
    "watch-ts": "tsc -w"
  },
  "pre-commit": [
    "build",
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forcedotcom/sf-fx-sdk-nodejs.git"
  },
  "author": "cwall@salesforce.com",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/forcedotcom/sf-fx-sdk-nodejs/issues"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "homepage": "https://github.com/forcedotcom/sf-fx-sdk-nodejs#readme",
  "dependencies": {
    "cloudevents-sdk": "0.2.1",
    "jsforce": "~1.9.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "tslib": "1.10.0",
    "typed-rest-client": "~1.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/jsforce": "^1.9.8",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/sinon": "^7.0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.3",
    "sinon": "^7.2.3",
    "ts-node": "7.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "3.2.2"
  }
}
