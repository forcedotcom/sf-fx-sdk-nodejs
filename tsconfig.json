{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "declaration":true,
        "declarationDir": "./dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "pretty": true,
        "typeRoots": [
            "./node_modules/@types", "./src/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}
