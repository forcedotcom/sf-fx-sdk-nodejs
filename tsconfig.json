{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./lib",
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "types": ["node"],
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "pretty": true
    },
    "include": [
        "./lib/**/*"
    ]
}
