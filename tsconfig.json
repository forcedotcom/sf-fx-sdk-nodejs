{
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "declaration": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "rootDirs": ["src/"],
        "pretty": true,
        "lib": ["ES2017"]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./dist",
        "./lib"
    ]
}
